# Dockerfile para desarrollo con hot-reload
FROM node:20-alpine

WORKDIR /app

# Instalar dependencias del sistema
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    libc6-compat \
    git

# Instalar pnpm globalmente
RUN npm install -g pnpm

# Copiar archivos de definición de paquetes
COPY package*.json ./
COPY pnpm-lock.yaml* ./
COPY yarn.lock* ./

# Instalar dependencias
RUN if [ -f pnpm-lock.yaml ]; then \
    pnpm install; \
    elif [ -f yarn.lock ]; then \
    yarn install; \
    else \
    npm install; \
    fi

# El código fuente se monta como volumen en docker-compose
# para permitir hot-reload

# Variables de entorno
ENV NODE_ENV=development
ENV PORT=3000

# Exponer puertos
EXPOSE 3000
EXPOSE 9229

# Comando de desarrollo con hot-reload
CMD ["npm", "run", "dev"]
