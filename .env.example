# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mastra
POSTGRES_PORT=5432

# URL de conexión completa
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/mastra

# ============================================
# CONFIGURACIÓN DE MASTRA
# ============================================
NODE_ENV=production
MASTRA_PORT=4111
MASTRA_DEV_PORT=3000
MASTRA_DEBUG_PORT=9229

# Log level: debug, info, warn, error
MASTRA_LOG_LEVEL=info

# Telemetría (true/false)
MASTRA_TELEMETRY_ENABLED=false

# Storage provider: libsql, postgres, etc.
STORAGE_PROVIDER=libsql

# ============================================
# API KEYS DE PROVEEDORES LLM
# ============================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key-here

# Azure OpenAI (opcional)
# AZURE_OPENAI_API_KEY=your-azure-openai-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# Cohere (opcional)
# COHERE_API_KEY=your-cohere-api-key

# Mistral (opcional)
# MISTRAL_API_KEY=your-mistral-api-key

# Groq (opcional)
# GROQ_API_KEY=your-groq-api-key

# ============================================
# REDIS (OPCIONAL)
# ============================================
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ============================================
# PGADMIN (OPCIONAL - DESARROLLO)
# ============================================
PGADMIN_EMAIL=admin@mastra.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# CONFIGURACIÓN DE VECTORES (RAG)
# ============================================

# Pinecone (opcional)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=your-pinecone-environment
# PINECONE_INDEX=your-index-name

# Qdrant (opcional)
# QDRANT_URL=http://qdrant:6333
# QDRANT_API_KEY=your-qdrant-api-key

# Chroma (opcional)
# CHROMA_URL=http://chromadb:8000

# Weaviate (opcional)
# WEAVIATE_URL=http://weaviate:8080
# WEAVIATE_API_KEY=your-weaviate-api-key

# ============================================
# OBSERVABILIDAD Y TRACING
# ============================================

# Langfuse (opcional)
# LANGFUSE_PUBLIC_KEY=your-langfuse-public-key
# LANGFUSE_SECRET_KEY=your-langfuse-secret-key
# LANGFUSE_HOST=https://cloud.langfuse.com

# LangSmith (opcional)
# LANGSMITH_API_KEY=your-langsmith-api-key
# LANGSMITH_PROJECT=your-project-name

# Braintrust (opcional)
# BRAINTRUST_API_KEY=your-braintrust-api-key

# ============================================
# INTEGRACIONES EXTERNAS
# ============================================

# Slack (opcional)
# SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
# SLACK_SIGNING_SECRET=your-signing-secret

# Discord (opcional)
# DISCORD_BOT_TOKEN=your-discord-bot-token

# Twilio (opcional)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token

# ============================================
# AUTENTICACIÓN (OPCIONAL)
# ============================================

# JWT
# JWT_SECRET=your-super-secret-jwt-key
# JWT_EXPIRES_IN=7d

# Clerk (opcional)
# CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
# CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Supabase (opcional)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-supabase-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Auth0 (opcional)
# AUTH0_DOMAIN=your-domain.auth0.com
# AUTH0_CLIENT_ID=your-client-id
# AUTH0_CLIENT_SECRET=your-client-secret

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================

# Hot reload
# CHOKIDAR_USEPOLLING=true

# Debug
# DEBUG=mastra:*
